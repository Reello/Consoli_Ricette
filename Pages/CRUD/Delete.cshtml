@page
@model Consoli_Ricette.Pages.CRUD.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Sei sicuro di voler cancellare questo post?</h1>

<div>
    <h4>Ricetta:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <h4>Identificativo Autore</h4>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.authorId)
        </dd>
        <dt class="col-sm-2">
            <h4>Nome Autore</h4>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.authorName)
        </dd>
        <dt class="col-sm-2">
            <h4>Difficoltà</h4>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.difficulty)
        </dd>
        <dt class="col-sm-2">
            <h4>Tempo necessario</h4>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.time)
        </dd>
        <dt class="col-sm-2">
            <h4>Ingredienti</h4>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.ingredients)
        </dd>
        <dt class="col-sm-2">
            <h4>Descrizione</h4>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.description)
        </dd>
        <dt class="col-sm-2">
            <h4>Passaggi</h4>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.procedures)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Recipe.id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
